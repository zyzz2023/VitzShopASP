@inherits LayoutComponentBase

<body>
    <header>
        <nav class="navbar navbar-expand-lg py-3" >
            <div class="container-fluid">
                <!-- Logo -->
                <a class="navbar-brand fw-bold fs-4" href="/">
                    <img src="Images/icon.jpg" alt="VTZ" width="130" height="115" class="d-inline-block align-text-top">
                </a>

                <form class="form-navigation d-none d-md-flex flex-grow-1 mx-3">
                    <div class="input-group dropdown p-0">
                        <input class="form-control form-control-sm smaller-search" type="search" placeholder="Поиск..." aria-label="Search">

                        <!-- Кнопка-триггер с правильными атрибутами -->
                        <button class="btn btn-outline-secondary" type="button"
                                data-bs-toggle="dropdown">
                            <i class="bi bi-list"></i>
                        </button>
                        <!-- Выпадающее меню с правильной структурой -->
                        <ul class="dropdown-menu w-100 p-0 m-0">
                            <li><a class="dropdown-item py-3" href="/productcatalog">Каталог</a></li> <!-- py-3 - отступ сверху/снизу -->
                            <li><a class="dropdown-item py-3" href="#">Авторизация</a></li>
                            <li><a class="dropdown-item py-3" href="#">Обратная связь</a></li>
                        </ul>

                        <button class="btn btn-outline-secondary" type="button">
                            <i class="bi bi-cart"></i>
                        </button>
                        <button class="btn btn-outline-secondary position-relative" type="button">
                            <i class="bi bi-heart"></i>
                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">2</span>
                        </button>
                    </div>
                </form>

                <!-- Text right -->
                <span class="general-text p-5">See you soon...</span>

            </div>
        </nav>
    </header>

    <main>
        <div class="container mt-5">
            @Body
        </div>
    </main>

    <footer>
        <p style="padding: 40px; font-size: 1.2rem;">&copy; 2025 VITZ. Все права защищены.</p>
    </footer>
</body>





<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
