@* Carousel.razor *@
@page "/carousel"

<div class="text-center mt-2 ">
    <h1>Добро пожаловать в VITZ Shop!</h1>
    <p class="lead">Стиль. Качество. Комфорт.</p>
</div>

<div id="carouselMain" class="carousel slide overflow-hidden rounded" data-bs-ride="carousel">
    <!-- Индикаторы -->
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselMain" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Слайд 1"></button>
        <button type="button" data-bs-target="#carouselMain" data-bs-slide-to="1" aria-label="Слайд 2"></button>
        <button type="button" data-bs-target="#carouselMain" data-bs-slide-to="2" aria-label="Слайд 3"></button>
    </div>

    <!-- Слайды с адаптивной высотой -->
    <div class="carousel-inner ratio ratio-16x9">
        <div class="carousel-item active">
            <img src="Images/carousel1.jpg" class="d-block w-100 object-fit-cover" alt="Слайд 1">
        </div>
        <div class="carousel-item">
            <img src="Images/carousel2.jpg" class="d-block w-100 object-fit-cover" alt="Слайд 2">
        </div>
        <div class="carousel-item">
            <img src="Images/carousel3.jpg" class="d-block w-100 object-fit-cover" alt="Слайд 3">
        </div>
    </div>

    <!-- Кнопки управления -->
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselMain" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Предыдущий</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselMain" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Следующий</span>
    </button>
</div>

