@inherits LayoutComponentBase
@inject IHeaderService HeaderService

<!DOCTYPE html>
<html>
<head>
</head>

<body style="padding-top: 60px;">
    <header class="position-fixed top-0 start-0 end-0 d-flex align-items-center justify-content-end px-3 py-2"
            style="z-index: 1000; background: rgba(0,0,0,0.8); height: 60px;">

        <!-- Контейнер для поиска (50% на ПК, 100% на мобильных) -->
        <div class="search-wrapper" style="width: 50%; margin-right: auto;">
            <ProductSearchBar />
        </div>
    </header>

    @Body
</body>
</html>

@code{
    protected override void OnInitialized()
    {
        HeaderService.HeaderChanged += StateHasChanged;
    }

    public void Dispose()
    {
        HeaderService.HeaderChanged -= StateHasChanged;
    }
}